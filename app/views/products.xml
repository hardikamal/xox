<Alloy>
	<View layout="vertical" class="container" backgroundColor="#E6E7E9" fullscreen="true">
		<Require src="_header" ></Require>
		<View height="20%" backgroundColor="#FBB62D">
			<Label left="10" top="10" color="white">Products</Label>
		</View>
		<View layout="vertical">
			<View layout="horizontal" height="20%" backgroundColor="#EB2127" onClick="prepaidPlus">
				<View backgroundColor="#A3161A" height="100%" width="25%">
					<ImageView image="/images/products_01.png" height="32" width="50"></ImageView>
				</View>
				<Label backgroundColor="transparent" color="white" left="20">PREPAID PLUS</Label>
			</View>
			<View layout="horizontal" height="20%" backgroundColor="#4CC4D2" onClick="prepaid">
				<View backgroundColor="#358790" height="100%" width="25%">
					<ImageView image="/images/products_02.png" height="55" width="65"></ImageView>
				</View>
				<Label backgroundColor="transparent" color="white" left="20">PREPAID</Label>
			</View>
			<View layout="horizontal" height="20%" backgroundColor="#1C6D83" onClick="penang">
				<View backgroundColor="#134D5B" height="100%" width="25%">
					<ImageView image="/images/products_03.png" height="38" width="38"></ImageView>
				</View>
				<Label backgroundColor="transparent" color="white" left="20">PENANG #1758</Label>
			</View>
			<View layout="horizontal" height="20%" backgroundColor="#28404C" onClick="mobileInternet">
				<View backgroundColor="#1A2D34" height="100%" width="25%">
					<ImageView image="/images/products_04.png" height="50" width="35"></ImageView>
				</View>
				<Label backgroundColor="transparent" color="white" left="20">MOBILE INTERNET</Label>
			</View>
			<View layout="horizontal" height="20%" backgroundColor="#646461" onClick="idd">
				<View backgroundColor="#454543" height="100%" width="25%">
					<ImageView image="/images/products_05.png" height="41" width="41"></ImageView>
				</View>
				<Label backgroundColor="transparent" color="white" left="20">IDD</Label>
			</View>
		</View>
	</View>
</Alloy>
