<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#EB2127">
			<Label backgroundColor="transparent" color="white" left="10">#1758 SWITCH TO XOX</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View layout="vertical" height="50" backgroundColor="#F2F2F2">
			<Label backgroundColor="transparent" color="black" left="20">Step 1 of 2</Label>
			<Label backgroundColor="transparent" color="#4CC4D2" left="20">Registration</Label>
		</View>
		<View layout="vertical" height="30" backgroundColor="black">
			<Label backgroundColor="transparent" color="white" height="100%" left="20">DETAILS</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" backgroundColor="white" width="90%">
			<Label backgroundColor="transparent" color="black" textAlign="left" left="0" top="10">Mobile Number</Label>
			<TextField id="mobileNo" height="30" width="Ti.UI.FILL" top="10" borderRadius="5" color="black" borderColor="#F2F2F2"></TextField>
			<Label backgroundColor="transparent" color="black" textAlign="left" left="0" top="10">Name</Label>
			<TextField id="name" height="30" width="Ti.UI.FILL" top="10" borderRadius="5" color="black" borderColor="#F2F2F2"></TextField>
			<Label backgroundColor="transparent" color="black" textAlign="left" left="0" top="10">Email</Label>
			<TextField id="email" height="30" width="Ti.UI.FILL" top="10" borderRadius="5" color="black" borderColor="#F2F2F2"></TextField>
		</ScrollView>
		<View height="50" backgroundColor="#000000" onClick="proceed">
			<Label color="white">PROCEED</Label>
		</View>
	</View>
</Alloy>
