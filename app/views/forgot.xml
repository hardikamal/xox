<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#4CC4D2">
			<Label backgroundColor="transparent" color="white" left="20">Forgot Username & Password</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="90%" backgroundColor="white">
			<Label backgroundColor="transparent" color="black" left="0" top="10">Please fill in your email address. We will send you a link to reset your password and username. You may need to check your spam folder or unblock no-reply@xox.com</Label>
			<Label backgroundColor="transparent" color="black" left="0" top="50">Username</Label>
			<TextField id="username" width="100%" height="50" borderColor="black" textAlign="center" color="black" ></TextField>
		</ScrollView>
		<View layout="horizontal" height="50" backgroundColor="#4CC4D2">
			<View height="100%" width="49.72%" backgroundColor="#4CC4D2" onClick="submit">
				<Label color="white" textAlign="left">Submit</Label>
			</View>
			<View backgroundColor="white" height="100%" width="0.5%"></View>
			<View height="100%" width="49.72%" backgroundColor="#4CC4D2" onClick="back">
				<Label color="white" textAlign="left">Cancel</Label>
			</View>
		</View>
	</View>
</Alloy>
