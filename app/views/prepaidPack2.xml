<Alloy>
	<ScrollView layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#4CC4D2">
			<Label backgroundColor="transparent" color="white" left="20">XOX PREPAID PACK</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View layout="vertical" height="50" backgroundColor="#F2F2F2">
			<Label backgroundColor="transparent" color="black" left="20">Step 2 of 4</Label>
			<Label backgroundColor="transparent" color="#4CC4D2" left="20">Registration</Label>
		</View>
		<View layout="horizontal" height="30" backgroundColor="#2f4f4f">
			<Label id="prepaid_subtitle"  backgroundColor="transparent" color="white" top="5" left="20" width="38%">PERSONAL DETAILS</Label>
			<Label id="prepaid_mandatory" backgroundColor="transparent" color="red"  width="50%" top="5">*Please fill in the Mandatory field</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="90%">
			<View id="contentView" layout="vertical" height="80" bottom="5" top ="5">
				<Label color="black" height="20" left="0">Salutation*</Label>
				<Picker id="picker" height="40" width="100%" height="Ti.UI.SIZE" top="10" selectionIndicator="true" backgroundColor="#EFEFEF" visible="true">
					<PickerRow title="Select an option"/>
                	<PickerRow title="1"/>
                	<PickerRow title="2"/>
				</Picker>
			</View>
			<View layout="vertical" height="80" bottom="5">
				<Label color="black" height="20" left="0">Name (as per NRIC/ Armed Force ID/ Passport)*</Label>
				<TextField height="40" width="Ti.UI.FILL" top="10" borderColor="#F2F2F2"></TextField>
			</View>
			<View id="contentView2" layout="vertical" height="80" bottom="5">
				<Label color="black" height="20" left="0">Reg Type*</Label>
				<Picker id="picker" height="40" width="100%" height="Ti.UI.SIZE" top="10" selectionIndicator="true" backgroundColor="#EFEFEF" visible="true">
					<PickerRow title="Select an option"/>
                	<PickerRow title="1"/>
                	<PickerRow title="2"/>
				</Picker>
			</View>
			<View layout="vertical" height="80" bottom="5">
				<Label color="black" height="20" left="0">NRIC No. / Armed Force ID / Passport*</Label>
				<TextField height="40" width="Ti.UI.FILL" top="10" borderColor="#F2F2F2"></TextField>
			</View>
			<View layout="vertical" height="80" bottom="5">
				<Label color="black" height="20" left="0">Retype NRIC No. / Armed Force ID / Passport*</Label>
				<TextField height="40" width="Ti.UI.FILL" top="10" borderColor="#F2F2F2"></TextField>
			</View>
			<View layout="vertical" height="80" bottom="5">
				<Label color="black" height="20" left="0">Date of Birth*</Label>
				<TextField height="40" width="Ti.UI.FILL" top="10" borderColor="#F2F2F2"></TextField>
			</View>
		</ScrollView>
		<View height="50" backgroundColor="#4CC4D2" onClick="proceed">
			<Label color="white">PROCEED</Label>
		</View>
	</ScrollView>
</Alloy>
