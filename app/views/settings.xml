<Alloy>
	<View layout="vertical" id="win" backgroundColor="white">
		<Require src="_header"></Require>
		<View height="20%" backgroundColor="#836EAF">
			<Label left="10" top="10" color="white">Settings</Label>
		</View>
        <ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="#E6E7E9">
			<View layout="horizontal" top="5" bottom="5" height="50" width="90%" backgroundColor="white">
				<View width="70%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Auto Login</Label>
				</View>
				<View width="30%" height="100%">
					<Switch id="switch1" onChange="login" value="false"/>
				</View>
			</View>
			<View layout="horizontal" top="5" bottom="5" height="50" width="90%" backgroundColor="white">
				<View width="70%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Push Notification</Label>
				</View>
				<View width="30%" height="100%">
					<Switch id="switch2" onChange="notification" value="false"/>
				</View>
			</View>
			<View layout="horizontal" top="5" height="50" width="90%" backgroundColor="white">
				<View width="100%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Social Sharing</Label>
				</View>
			</View>
			<View layout="composite" height="50" width="90%" backgroundColor="gray" onClick="facebook">
				<View width="100%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Facebook</Label>
				</View>
				<View height="100%" width="Ti.UI.SIZE" right="10" backgroundColor="transparent">
					<ImageView id="arrow1" image="/images/dropdown_icon.png" width="25" height="15"></ImageView>
				</View>
			</View>
			<View layout="composite" height="50" width="90%" backgroundColor="gray" onClick="twitter">
				<View width="100%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Twitter</Label>
				</View>
				<View height="100%" width="Ti.UI.SIZE" right="10" backgroundColor="transparent">
					<ImageView id="arrow2" image="/images/dropdown_icon.png" width="25" height="15"></ImageView>
				</View>
			</View>
			<View layout="composite" height="50" width="90%" backgroundColor="gray" onClick="google">
				<View width="100%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Google+</Label>
				</View>
				<View height="100%" width="Ti.UI.SIZE" right="10">
					<ImageView id="arrow3" image="/images/dropdown_icon.png" width="25" height="15"></ImageView>
				</View>
			</View>
		</ScrollView>
    </View> 
</Alloy>

