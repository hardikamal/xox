<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E82630">
			<Label backgroundColor="transparent" color="white" left="20">Subline Management</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View id="menu" layout="horizontal" height="50" width="100%">
    		<Label id="lbl1" mod="0" height="100%" width="49.5%" onTouchend="goSlide" class="menuItem" textAlign="center" backgroundColor="#FFFFFF" color="black">Account Details</Label>
    		<View backgroundColor="#E7E7E7" height="100%" width="1%"></View>
    		<Label id="lbl2" mod="1" height="100%" width="49.5%" onTouchend="goSlide" class="menuItem" textAlign="center" backgroundColor="#F5F5F5" color="black">My Profile</Label>
    	</View>
        <ScrollableView id="scrollableView" showPagingControl="false" scrollingEnabled="false">
        	<Require src="sublineDetails1"/>
        	<Require src="sublineDetails2"/>
        </ScrollableView>
	</View>
</Alloy>