<Alloy>
	<View class="container" layout="composite" backgroundColor="black">
		<Require src="_header" ></Require>
		<View id="login" backgroundColor="black" zIndex="0" top="50">
			<View layout="vertical" width="90%" height="Ti.UI.SIZE" backgroundColor="white">
				<View height="50" width="Ti.UI.FILL">
					<ImageView backgroundColor="transparent" width="20" height="20" right="10" top="10" onClick="close" image="/images/close_icon.png"></ImageView>
				</View>
				<View height="50" width="Ti.UI.FILL">
					<View layout="vertical">
						<Label color="black">Username</Label>
						<TextField id="username" width="90%" height="50%" value="username" backgroundColor="#E6E7E9" textAlign="center" hintText="someone@example.com" color="black" borderRadius="15"></TextField>
					</View>
				</View>
				<View height="50" width="Ti.UI.FILL">
					<View layout="vertical">
						<Label color="black">Password</Label>
						<TextField id="password" width="90%" height="50%" value="password" backgroundColor="#E6E7E9" textAlign="center" hintText="********" color="black" passwordMask="true" borderRadius="15"></TextField>
					</View>
				</View>
				<View height="50" width="Ti.UI.FILL">
					<Button color="#44C7D6" borderColor="#44C7D6" height="80%" width="60%" backgroundColor="white" borderRadius="20" onClick="login">Login</Button>
				</View>
				<!--<View height="15%" width="Ti.UI.FILL">
					<Label color="#44C7D6" onClick="forgot">Forgot Username & Password?</Label>
				</View>
				<View height="15%" width="Ti.UI.FILL">
					<Label color="#44C7D6" onClick="register">Not Registered yet?</Label>
				</View>-->
				<View height="50" layout="vertical" width="Ti.UI.FILL">
					<Label id="forgotText" color="#44C7D6" width="205" textAlign="center" onClick="forgot">Forgot Username & Password?</Label>
					<View id="forgotLine" backgroundColor="#44C7D6" height="1"></View>
				</View>
				<View height="50" layout="horizontal" width="Ti.UI.SIZE">
					<Label color="black" width="Ti.UI.SIZE" textAlign="center">Not Registered yet?</Label>
					<View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
						<Label id="registerText" color="#44C7D6" width="50" textAlign="center" onClick="register">Sign up</Label>
						<View id="registerLine" backgroundColor="#44C7D6" height="1"></View>
					</View>
					<Label color="black" width="Ti.UI.SIZE" textAlign="center">now.</Label>
				</View>
			</View>
		</View>
		<ScrollView id="scrollView" layout="vertical" backgroundColor="black" top="60" left="10" right="10" bottom="10" zIndex="1">
			<View width="100%" height="33%" backgroundColor="red" backgroundImage="/images/button_01.png" bottom="5" onClick="myAccount"></View>
			<View layout="horizontal" height="33%" width="100%" top="5" bottom="5">
				<View height="100%" width="49%" right="5" backgroundColor="blue" backgroundImage="/images/button_02.png" onClick="promoNews"></View>
				<View height="100%" width="auto" left="5" backgroundColor="orange" backgroundImage="/images/button_03.png" onClick="product"></View>
			</View>
			<View layout="horizontal" height="33%" width="100%" top="5">
				<View height="100%" width="49%" right="5" backgroundColor="pink" backgroundImage="/images/button_04.png" onClick="online"></View>
				<View layout="vertical" height="100%" width="auto" left="5">
					<View height="49%" width="100%" bottom="5" backgroundColor="green" backgroundImage="/images/button_05.png" onClick="history"></View>
					<View layout="horizontal" height="auto" width="100%" top="5">
						<View height="100%" width="49%" right="5" backgroundColor="purple" backgroundImage="/images/button_06.png" onClick="contact"></View>
						<View height="100%" width="auto" left="5" backgroundColor="gray" backgroundImage="/images/button_07.png" onClick="setting"></View>
					</View>
				</View>
			</View>
		</ScrollView> 
	</View>
</Alloy>