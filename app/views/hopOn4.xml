<Alloy>
	<ScrollView layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="red">
			<Label backgroundColor="transparent" color="white" left="20">HOP ON</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View layout="vertical" height="50" backgroundColor="#F2F2F2">
			<Label backgroundColor="transparent" color="black" left="20">Step 4 of 5</Label>
			<Label backgroundColor="transparent" color="red" left="20">Payment Summary</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%">
			<View layout="horizontal" width="90%" height="50">
				<Label id="item_title" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="50" width="20%" top="5" >Items No</Label>
				<Label id="desc_title" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="50" width="50%" top="5">Mobile Number</Label>
				<Label id="cost_title" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="50" width="30%" top="5">Cost</Label>
			</View>
			<View layout="horizontal" width="90%" height="30">
				<Label id="item_data" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="30" width="20%" top="5" >1</Label>
				<Label id="desc_data" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="30" width="50%" top="5">MNP - 0102431567</Label>
				<Label id="cost_data" textAlign=" Ti.UI.TEXT_ALIGNMENT_CENTER" height="30" width="30%" top="5">RM00.00</Label>
			</View>
			 <View layout="horizontal" width="100%" backgroundColor="#bf0404" top="10" height="50">
				<Label id="total_payment"  backgroundColor="transparent" color="white" top="10" left="20" width="65%">TOTAL PAYMENT</Label>
				<Label id="total_price" backgroundColor="transparent" color="white"  width="20%" top="10">RM00.00</Label>
			</View>
		</ScrollView>
		<View height="50" backgroundColor="red" onClick="submit">
			<Label color="white">SUBMIT</Label>
		</View>
	</ScrollView>
</Alloy>
