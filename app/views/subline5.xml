<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E82630">
			<Label backgroundColor="transparent" color="white" left="20">Subline Management</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View layout="composite" height="50" backgroundColor="white">
			<Label backgroundColor="transparent" color="black" left="20">Subline Data Subscription Request</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="white">
			<View layout="horizontal" height="50">
				<Label backgroundColor="transparent" width="50%" color="black" left="5" height="auto">Mobile Number</Label>
				<Label backgroundColor="transparent" width="auto" color="black" height="auto">011xxxxxxx</Label>
			</View>
			<View backgroundColor="#F1F1F1" width="100%" height="1"></View>
			<View layout="horizontal" height="50">
				<Label backgroundColor="transparent" width="50%" color="black" left="5" height="auto">Data Plan</Label>
				<Label backgroundColor="transparent" width="auto" color="black" height="auto">M500MB</Label>
			</View>
			<View backgroundColor="#F1F1F1" width="100%" height="1"></View>
			<View layout="horizontal" height="50">
				<Label backgroundColor="transparent" width="50%" color="black" left="5" height="auto">Current Prepaid Balance(RM)</Label>
				<Label backgroundColor="transparent" width="auto" color="black" height="auto">88.88</Label>
			</View>
			<View backgroundColor="#F1F1F1" width="100%" height="1"></View>
			<View layout="horizontal" height="50">
				<Label backgroundColor="transparent" width="50%" color="black" left="5" height="auto">Current EWallet Balance(RM)</Label>
				<Label backgroundColor="transparent" width="auto" color="black" height="auto">0.00</Label>
			</View>
			<View backgroundColor="#F1F1F1" width="100%" height="1"></View>
			<View layout="horizontal" height="50">
				<Label backgroundColor="transparent" width="50%" color="black" left="5" height="auto">Season Pass Data Counter(MB)</Label>
				<Label backgroundColor="transparent" width="auto" color="black" height="auto">0</Label>
			</View>
			<View backgroundColor="#F1F1F1" width="100%" height="1"></View>
		</ScrollView>
		<View layout="horizontal" height="50" backgroundColor="black">
			<View height="100%" width="49.72%" backgroundColor="black" onClick="subscribe">
				<Label color="white" textAlign="center">Subscribe</Label>
			</View>
			<View backgroundColor="white" height="100%" width="0.5%"></View>
			<View height="100%" width="49.72%" backgroundColor="black" onClick="back">
				<Label color="white" textAlign="center">Cancel</Label>
			</View>
		</View>
	</View>
</Alloy>
