<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="red">
			<Label backgroundColor="transparent" color="white" left="20">HOP ON</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<View layout="vertical" height="50" backgroundColor="#F2F2F2">
			<Label backgroundColor="transparent" color="black" left="20">Step 1 of 5</Label>
			<Label backgroundColor="transparent" color="red" left="20">Instruction</Label>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="90%">
			<View top="10" bottom="20" height="Ti.UI.SIZE" width="100%" textAlign=" Ti.UI.TEXT_ALIGNMENT_LEFT">
				<Label backgroundColor="transparent" color="black" width="100%" textAlign=" Ti.UI.TEXT_ALIGNMENT_LEFT">Hello there, welcome to XOX HopOn Online!</Label>
			</View>
			<View bottom="20" width="100%" height="Ti.UI.SIZE">
				<Label backgroundColor="transparent" color="black" width="100%" textAlign="left">All you need to do is fill in your information, pay a small fee of RM6 for XOX HopOn online, and we will deliver new SIM card(s) to you within 5 days! What are you waiting for? HopOn today!</Label>
			</View>
			<View bottom="20" width="100%" height="Ti.UI.SIZE">
				<Label backgroundColor="transparent" color="black" width="100%" textAlign="left">Read the FAQ to learn more.</Label>
			</View>
			<View bottom="20" width="100%" height="Ti.UI.SIZE">
				<Label backgroundColor="transparent" color="black" width="100%" textAlign="left">Get Free Mobile Internet Data everytime you make an accumalative monthly top up. * or swap your Free Data for Free Calls instead! Just contact us! *FREE data or calls will be updated in your Season Pass subscription on the 15th of every following month.</Label>
			</View>
		</ScrollView>
		<View height="50" backgroundColor="red" onClick="next" bottom="1">
			<Label color="white">REGISTER NOW</Label>
		</View>
		<View height="50" backgroundColor="red" onClick="verification" bottom="1">
			<Label color="white">VERIFICATION</Label>
		</View>
		<View height="50" backgroundColor="red" onClick="status" bottom="1">
			<Label color="white">STATUS</Label>
		</View>
		<View height="50" backgroundColor="red" onClick="submission">
			<Label color="white">RESUBMISSION</Label>
		</View>
	</View>
</Alloy>
