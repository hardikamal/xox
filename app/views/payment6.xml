<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E91D2F">
			<Label backgroundColor="transparent" color="white" left="20">Payment</Label>
			<!--ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView-->
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="white">
			<Label color="black" top="20">Payment Confirmation</Label>
			<View backgroundColor="#F1F1F1" width="90%" height="2" top="10" bottom="10"></View>
			<Label id="account" text="left" left="10%" color="black">Account No : 01X 0000000</Label>
			<Label id="amount" text="left" left="10%" color="black">Amount(RM) : RM20</Label>
			<Label id="method" text="left" left="10%" color="black">Payment Method : Credit Card</Label>
			<Button color="red" borderColor="red" backgroundColor="white" height="10%" width="60%" borderRadius="20" onClick="done" top="40">Done</Button>
		</ScrollView>
	</View>
</Alloy>
