<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E91D2F">
			<Label backgroundColor="transparent" color="white" left="20">Payment</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="white">
			<Label color="black" top="20">Choose payment method:</Label>
			<View backgroundColor="#4CC4D2" height="20%" width="90%" top="10" mod="Online Banking" borderRadius="15" onClick="paymentMethod">
				<Label color="white" textAlign="center" mod="10">Online Banking</Label>
			</View>
			<View backgroundColor="#4CC4D2" height="20%" width="90%" top="10" mod="Credit Card" borderRadius="15" onClick="paymentMethod">
				<Label color="white" textAlign="center" mod="10">Credit Card</Label>
			</View>
		</ScrollView>
	</View>
</Alloy>
