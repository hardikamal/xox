<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E91D2F">
			<Label backgroundColor="transparent" color="white" left="20">Payment</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="white">
			<Label color="black" top="20">Current Balance (RM)</Label>
			<Label color="black" textAlign="center">85.05</Label>
			<View backgroundColor="#F1F1F1" width="100%" height="2" top="10" bottom="10"></View>
			<Label color="black" bottom="10">How much to top up?</Label>
			<View layout="horizontal" height="20%" width="90%">
				<View backgroundColor="#4CC4D2" height="100%" width="49%" borderRadius="15" mod="10" onClick="paymentValue">
					<Label color="white" textAlign="center" mod="10">RM 10</Label>
				</View>
				<View backgroundColor="white" height="100%" width="2%"></View>
				<View backgroundColor="#4CC4D2" height="100%" width="auto" borderRadius="15" mod="20" onClick="paymentValue">
					<Label color="white" textAlign="center" mod="20">RM 20</Label>
				</View>
			</View>
			<View layout="horizontal" height="20%" width="90%" top="10">
				<View backgroundColor="#4CC4D2" height="100%" width="49%" borderRadius="15" mod="50" onClick="paymentValue">
					<Label color="white" textAlign="center" mod="50">RM 50</Label>
				</View>
				<View backgroundColor="white" height="100%" width="2%"></View>
				<View backgroundColor="#4CC4D2" height="100%" width="auto" borderRadius="15" mod="100" onClick="paymentValue">
					<Label color="white" textAlign="center" mod="100">RM 100</Label>
				</View>
			</View>
		</ScrollView>
	</View>
</Alloy>
