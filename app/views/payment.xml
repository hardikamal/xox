<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E91D2F">
			<Label backgroundColor="transparent" color="white" left="20">Payment</Label>
			<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="white">
			<View layout="horizontal" top="5" bottom="5" height="50" width="100%" backgroundColor="white">
				<View width="80%" height="100%" onClick="paymentPostpaid">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Pay Postpaid Bill</Label>
				</View>
				<View width="20%" height="100%" onClick="paymentPostpaid">
					<ImageView id="arrow1" image="/images/dropdown_icon.png" width="25" height="15"></ImageView>
				</View>
			</View>
			<View layout="horizontal" top="5" bottom="5" height="50" width="100%" backgroundColor="white">
				<View width="80%" height="100%" onClick="paymentPrepaid">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Prepaid Top Up</Label>
				</View>
				<View width="20%" height="100%" onClick="paymentPrepaid">
					<ImageView id="arrow2" image="/images/dropdown_icon.png" width="25" height="15"></ImageView>
				</View>
			</View>
		</ScrollView>
	</View>
</Alloy>
