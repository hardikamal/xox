<Alloy>
	<View layout="vertical" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View layout="composite" height="50" backgroundColor="#E91D2F">
			<View layout="horizontal" height="50" backgroundColor="#E91D2F">
				<Label backgroundColor="#bf0404" height="50" width="45%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" color="white" >Account Details</Label>
				<Label backgroundColor="transparent"  height="50" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" width="45%" color="white" onClick="myProfile">My Profile</Label>
				<ImageView backgroundColor="transparent" width="10%" height="30" top="10" onClick="back" image="/images/close_icon.png"></ImageView>
			</View>
		</View>
		<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="#F5F5F5">
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Mobile No : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >01X 0000000</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Name : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >XOX Tester</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Subscription Plan : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >Prepaid Plan</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Effective Date : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >20-03-2015</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >E-wallet Balance(RM) : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >RM150.00</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Status : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >Active</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="#bf0404">
				<View width="100%" height="100%">
					<Label id="account_subtitle" backgroundColor="transparent" color="white" textAlign="left" left="10" >PREPAID ACCOUNT</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Prepaid Balance : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >RM150.00</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Expiry Date : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >20-03-2017</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="#bf0404">
				<View width="100%" height="100%">
					<Label id="account_subtitle" backgroundColor="transparent" color="white" textAlign="left" left="10" >FREE SMS</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Unutillized Free SMS : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >100</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="#bf0404">
				<View width="100%" height="100%">
					<Label id="account_subtitle" backgroundColor="transparent" color="white" textAlign="left" left="10" >SEASON PASS COUNTER</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Voice (Minutes) : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >100 minutes</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >SMS : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >100</Label>
				</View>
			</View>
			<View layout="horizontal" bottom="1" height="50" width="100%" backgroundColor="white">
				<View width="50%" height="100%">
					<Label backgroundColor="transparent" color="black" textAlign="left" left="10" >Data : </Label>
				</View>
				<View width="40%" height="100%">
					<Label backgroundColor="transparent" color="#9D9DB9" textAlign="left" left="10" >1GB</Label>
				</View>
			</View>
		</ScrollView>
		<View layout="horizontal" height="50" backgroundColor="red" onClick="statement">
			<Label color="white" height="100%" width="100%" textAlign="center" onClick="statement">View Bil Statement</Label>
		</View>
	</View>
</Alloy>



