<Alloy>
	<View layout="composite" class="container" backgroundColor="white" fullscreen="true">
		<Require src="_header" ></Require>
		<View id="add" backgroundColor="black" zIndex="0" top="50">
			<View layout="vertical" width="90%" height="Ti.UI.SIZE" backgroundColor="white" borderColor="white">
				<View height="50" width="Ti.UI.FILL">
					<Label color="black" width="Ti.UI.SIZE" textAlign="left">Add Friends & Family Mobile Number</Label>
				</View>
				<View height="70" width="Ti.UI.FILL" backgroundColor="gray">
					<TextField id="mobileNo" width="90%" height="50" backgroundColor="white" color="black" borderColor="black" keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD" ></TextField>
				</View>
				<View layout="horizontal" height="50" backgroundColor="black">
					<View height="100%" width="49.72%" backgroundColor="black" onClick="submit">
						<Label color="white" textAlign="center">Submit</Label>
					</View>
					<View backgroundColor="white" height="100%" width="0.5%"></View>
					<View height="100%" width="49.72%" backgroundColor="black" onClick="cancel">
						<Label color="white" textAlign="center">Cancel</Label>
					</View>
				</View>
			</View>
		</View>
		<View layout="vertical" top="50" zIndex="1">
			<View layout="composite" height="50" backgroundColor="#E82630">
				<Label backgroundColor="transparent" color="white" left="20">Friends & Family</Label>
				<ImageView backgroundColor="transparent" width="30" height="30" right="10" onClick="back" image="/images/close_icon.png"></ImageView>
			</View>
			<View layout="composite" height="100" backgroundColor="gray">
				<Label backgroundColor="transparent" color="black" left="20">
					Add your 15 most important people on any mobile network or Telekom Malaysia fixed line into the list to enjoy a special call rate and SMS rate.
				</Label>
			</View>
			<ScrollView id="scrollView" layout="vertical" width="100%" backgroundColor="#E6E7E9">
				<Label id="empty" backgroundColor="transparent" color="black" left="20">Currently no friends & family</Label>
				<View layout="horizontal" height="20%">
					<View layout="vertical" height="100%" width="70%">
						<Label backgroundColor="transparent" color="black" left="20">Mobile Number</Label>
						<Label backgroundColor="transparent" color="black" left="20">011XXXXXXX</Label>
					</View>
					<Label width="auto" backgroundColor="transparent" color="gray" right="20" >Remove</Label>
				</View>
				<View height="1" width="90%" backgroundColor="gray"></View>
			</ScrollView>
			<View height="50" backgroundColor="black" onClick="ff">
				<Label color="white">Add Friends & Family</Label>
			</View>
		</View>
	</View>
</Alloy>