var mainView=null;exports.construct=function(e){mainView=e},exports.hideLoading=function(){mainView.activityIndicator.hide(),mainView.loadingBar.opacity="0",mainView.loadingBar.height="0",mainView.loadingBar.top="0"},exports.showLoading=function(){mainView.activityIndicator.show(),mainView.loadingBar.opacity="1",mainView.loadingBar.zIndex="100",mainView.loadingBar.height="120","android"==Ti.Platform.osname?(mainView.loadingBar.top=PixelsToDPUnits(Ti.Platform.displayCaps.platformHeight)/2-50,mainView.activityIndicator.style=Ti.UI.ActivityIndicatorStyle.BIG,mainView.activityIndicator.top=0):(mainView.loadingBar.top=Ti.Platform.displayCaps.platformHeight/2-50,mainView.activityIndicator.style=Ti.UI.iPhone.ActivityIndicatorStyle.BIG)},exports.createAlert=function(e,t){var i=Titanium.UI.createAlertDialog({title:e,ok:"Okay",message:t});i.show()},exports.popup=function(e,t){var i=Ti.UI.createWindow({theme:"Theme.AppCompat.Translucent.NoTitleBar.Fullscreen",backgroundImage:"/images/Transparent.png",opacity:0,id:"popupWin"}),o=Ti.UI.createView({width:t.width,height:t.height,backgroundColor:"#000000",borderRadius:10,borderColor:"#565656",borderWidth:1});o.add(e),i.add(o),i.addEventListener("click",function(e){null!=e.source.id&&i.close()});var l=Ti.UI.create2DMatrix();return l=l.scale(1.3,1.3),i.addEventListener("open",function(){var e=Ti.UI.createAnimation({transform:l,opacity:1,duration:500});i.animate(e)}),i};